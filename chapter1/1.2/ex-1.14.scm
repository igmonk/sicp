(define (change a n)
  (cond ((= a 0) 1)
	((< a 0) 0)
	((= n 0) 0)
	(else (+ (change a (- n 1))
		 (change (- a (coin n)) n)))))

(define (coin i)
  (cond ((= i 1) 1)
	((= i 2) 5)
	((= i 3) 10)
	((= i 4) 25)
	((= i 5) 50)))

(define (change-5 a)
  (change a 5))

